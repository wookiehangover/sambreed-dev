---
import CategoryChildren from './CategoryChildren.astro';
import type { WikiCategory } from '../types/wiki';

export interface Props {
  value: WikiCategory
}

const { value } = Astro.props
---

<div>
  <a href={`/wiki/category/${value.path}`} title={`Category: ${value.label}`}>{value.label}</a>
  {value.children.length > 0 && (
    <CategoryChildren value={value} />
  )}
</div>