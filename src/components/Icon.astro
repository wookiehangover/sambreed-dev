---
const icons = [
	"copy",
	"bulleted-list",
	"document",
	"external-link",
	"folder",
	"help",
	"industry",
	"info",
	"quote",
	"journal",
	"chain-link",
	"list",
	"note",
	"notes",
	"opened-folder",
	"person-overview",
	"reference-block",
	"network",
	"search",
	"tag",
	"skills",
	"sources",
	"share",
	"table-view",
	"task",
	"essay",
	"link",
	"back",
	"mention",
	"references",
	"book",
	"tracking-or-journey",
	"email",
	"text-message",
] as const;

export type IconName = (typeof icons)[number];

export interface Props {
	name: IconName;
	size?: number | string;
	title?: string;
}

const { name, size = 20, title } = Astro.props;
---

<svg viewBox="0 0 20 20" width={size} height={size}>
	{title && <title>{title}</title>}
	<use href={`/icon-sprite.svg#icon-${name}`}></use>
</svg>

<style>
	svg {
		fill: currentColor;
	}
</style>
