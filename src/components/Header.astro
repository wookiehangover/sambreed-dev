---
export interface Props {
	label?: string;
}

const { label = "website" } = Astro.props
---

<header>
	<h2>
		<a href="/">Sam Breed's</a> modest personal {label}.
	</h2>
</header>
<style>
	header h2 {
		color: var(--text-dim);
		font-size: 1rem;
		line-height: 1.6;
		font-weight: normal;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--hr-border-color);
		padding: 19px 1rem;
		transition: border 0.3s ease-in-out;
	}

	@media (min-width: 1350px) {
		header {
			position: fixed;
			left: 0;
		}
		header h2 {
			border-color: transparent;
			margin-bottom: 0;
		}
	}
</style>
