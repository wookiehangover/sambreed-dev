---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header>
	<h2>
		<a href="/">Sam Breed's</a> modest personal website.
	</h2>
</header>
<style>
	header h2 {
		color: var(--text-dim);
		font-size: 1rem;
		line-height: 1.6;
		font-weight: normal;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--hr-border-color);
	}

	@media (min-width: 1296px) {
		header {
			position: fixed;
			top: 1.2rem;
			left: 1rem;
		}
		header h2 {
			border: none;
		}
	}
</style>
