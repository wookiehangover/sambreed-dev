---
import type { CollectionEntry } from 'astro:content';
import type { WikiCategory } from '../types/wiki';
import CategoryList from './CategoryList.astro';
import Icon from './Icon.astro';

export interface Props {
  entries: CollectionEntry<"wiki">[]
  map: Map<string, WikiCategory>
}

const { entries, map } = Astro.props
---

<ul>
  {entries.map((entry) => (
    <li>
      <a href={`/wiki/${entry.slug}`}>
        <span>{entry.data.title}</span>
        <p>{entry.data.description}</p>
      </a>
      {entry.data.categories.length > 0 && (
        <nav class="text-xs">
          <CategoryList categories={entry.data.categories} map={map} />
        </nav>
      )}
      <span class="icon">
        <Icon name={entry.data.type} />
      </span>
    </li>
  ))}
</ul>
<style>
  ul {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1rem;
  }

  ul li {
    margin: 0;
    border: 1px solid var(--blockquote-border-color);
    border-radius: 0.25rem;
    transition: all 0.2s ease-in-out;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  ul li > a {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding: 1.25rem 1.25rem 1rem;
    text-decoration: none;
    height: 4rem;
    gap: 0.5rem;
  }

  ul li > a > span {
    line-height: 1.4;
  }

  ul li > a > p {
    color: var(--text-dim);
    margin: 0;
    font-size: 0.875rem;
  }

  ul li:hover {
    background: var(--card-bg-hover);
    top: -1px;
    left: -1px;
  }

  ul li:has(a:active) {
    top: 0px;
    left: 0px;
  }

  ul li > nav {
    padding: 0 1.25rem 1.25rem;
  }

  .icon {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    fill: var(--blockquote-border-color);
    opacity: 0.5;
    transition: all 0.2s ease-in-out;
  }

  ul li:hover .icon {
    opacity: 1;
  }

  @media screen and (max-width: 768px) {
    ul {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>