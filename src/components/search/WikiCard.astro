---
import CategoryList from "~/components/wiki/CategoryList.astro";

const { entry, map } = Astro.props;
---

<li>
	<h2>
		<a href={`/wiki/${entry.id}`}>{entry.data.title}</a>
	</h2>
	<p class="text-sm">{entry.data.description}</p>
	<nav class="text-xs flex gap-1 w-full">
		<CategoryList categories={entry.data.categories} map={map} />
	</nav>
</li>
<style>
	li {
		border: 1px solid transparent;
		border-radius: 4px;
		padding: 0 1rem;
		display: flex;
		flex-direction: column;
		transition: background 0.2s ease-in-out;
		background: var(--card-bg);

		&:hover {
			background: var(--card-bg-hover);
		}
	}

	h2 {
		font-family: var(--font-family-body);
		font-size: 1rem;
		line-height: 1.3;
		font-weight: normal;
		text-wrap: wrap;
	}

	nav {
		border-top: 1px solid var(--border-dim);
		padding: 0.5rem 0;
		margin-top: auto;
		flex-wrap: wrap;
		height: 40px;
		overflow: hidden;
	}
</style>
