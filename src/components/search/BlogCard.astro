---
const { entry } = Astro.props;
---

<li>
  <h2>
    <a href={`/writing/${entry.slug}`}>{entry.title}</a>
  </h2>

  <figure>
    {entry.heroImage ? <img src={entry.heroImage} alt={entry.heroAlt} loading="lazy" /> : <div class="aspect-ratio-16/9" />}
  </figure>

  <p class="text-sm">{entry.description}</p>

  <p>
    <time datetime={entry.pubDate}>
      {new Date(entry.pubDate).toLocaleDateString("en-us", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })}
    </time>
  </p>
</li>

<style>
  li {
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 0 1rem;
    transition: background 0.2s ease-in-out;
    background: var(--card-bg);

    &:hover {
      background: var(--card-bg-hover);
    }
  }

  h2 {
    font-family: var(--font-family-body);
    font-size: 1rem;
    line-height: 1.3;
    font-weight: normal;
    text-wrap: wrap;
  }

  li p {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-block: 0;
    margin: 1rem 0;
  }

  li time {
    font-size: 0.8em;
    color: var(--text-dim);
  }

  figure {
    margin-block: 0;
    overflow: hidden;
    border-radius: 4px;
  }

  figure img {
    aspect-ratio: 16 / 9;
    object-fit: cover;
    object-position: top;
    margin: 0;
  }

  .aspect-ratio-16\/9 {
    aspect-ratio: 16 / 9;
  }

  /* random gradient */

  figure > div {
    background: linear-gradient(to bottom, var(--blue-5), var(--violet-4));
    width: 100%;
    height: 100%;
  }
</style>
