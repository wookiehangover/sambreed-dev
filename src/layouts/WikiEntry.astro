---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from "astro:content"
import Category from '../components/Category.astro';
import getAllCategories from '../utils/get-all-categories';

export interface Props {
	content: {
		title: string;
		description?: string;
		createdAt?: Date;
		updatedAt?: Date;
		categories?: string[]
		tags?: string[]
		all_categories?: string[]
	};
}

const wikiEntries = await getCollection("wiki")
const all_categories = getAllCategories(wikiEntries)

const {
	content: { title, description, createdAt, updatedAt  },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description ?? `Wiki Entry for ${title}`} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
		</style>
	</head>

	<body>
		<nav class="categories">
			{all_categories.map((category) => (
				<Category value={category} />
			))}
		</nav>
		<Header />
		<main>
			<article>
				<h1 class="title">{title}</h1>
				<aside class="text-xs flex flex-col justify-end">
					{createdAt && (
						<div>
							First posted on <time>{createdAt.toLocaleDateString()}</time>
						</div>
					)}
					{
						updatedAt && (
							<div>
								Last updated on <time>{updatedAt.toLocaleDateString()}</time>
							</div>
						)
					}
					</aside>
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>

<script>
	// external links should open in a new tab
	document.addEventListener("DOMContentLoaded", function() {
		const links = document.querySelectorAll("a");
	
		links.forEach((link) => {
			const href = link.getAttribute("href");
			const isExternal = href?.startsWith("http") && !location.hostname.includes(href);
	
			if (isExternal) {
				link.setAttribute("target", "_blank");
				link.setAttribute("rel", "noopener noreferrer");
			}
		});
	});
</script>

<style>
	nav.categories {
		position: fixed;
		left: 1rem;
		top: 4rem;
		font-size: 0.8rem;
	}
</style>