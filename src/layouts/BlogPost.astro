---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPosts from '../components/BlogPosts.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		heroAlt?: string;
		slug: string
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, heroAlt, slug },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<section>
			<header>
				<h1>{title}</h1>
				<p>
					{pubDate && <time>{pubDate}</time>}
				</p>
				{
					updatedDate && (
						<p>
							Last updated on <time>{updatedDate}</time>
						</p>
					)
				}
			</header>
			<article class="w-prose">
				<figure>
					{heroImage && <img src={heroImage} alt={heroAlt} />}
					{heroAlt && (<figcaption class="cap">{heroAlt}</figcaption>)}
				</figure>

				<slot />
			</article>
		</section>

		<BlogPosts exclude={slug} />

		<Footer />
	</body>
</html>

<script>
	// external links should open in a new tab
	document.addEventListener("DOMContentLoaded", function() {
		const links = document.querySelectorAll("a");
	
		links.forEach((link) => {
			const href = link.getAttribute("href");
			const isExternal = href?.startsWith("http") && !location.hostname.includes(href);
	
			if (isExternal) {
				link.setAttribute("target", "_blank");
				link.setAttribute("rel", "noopener noreferrer");
			}
		});
	});
</script>