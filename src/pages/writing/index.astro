---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "~/config";

import { getCollection } from "astro:content";
import BlogCard from "~/components/search/BlogCard.astro";
import SearchForm from "~/components/search/SearchForm.astro";
const posts = (await getCollection("writing")).sort(
	(a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
import { getThemeClass } from "~/utils/get-theme-class";
const theme = Astro.cookies.get("dark");
const themeClass = getThemeClass(theme);
---

<!doctype html>
<html lang="en" class={themeClass}>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <section>
      <header>
        <h1>“Blog”</h1>
      </header>
      <div>
        <SearchForm action="/writing/search" />
        <ul>
          {
            posts.map((post) => (
              <li>
                <BlogCard entry={post} />
              </li>
            ))
          }
          <li>
            <h2>
              <a href="https://medium.com/@sambreed/2015-books-504cb79ac5c0#.f8izs5mpq">2015 reading list</a>
            </h2>
            <time>01/01/2016</time>
          </li>
        </ul>
      </div>
    </section>
    <Footer />
  </body><style>
    main {
      max-width: var(--width);
      margin: auto;
    }

    ul {
        display: grid;
        list-style: none;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin: 0;
        padding: 0;

        li {
            display: flex;
        }
    }

    @media (max-width: 512px) {
      ul {
        grid-template-columns: 1fr;
      }
    }
  </style>
</html>
